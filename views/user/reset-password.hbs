<div class="container">
  <h2 style="text-align: center; color: #FF6F61;">NEW PASSWORD</h2>
  <div class="row d-flex justify-content-center">
    <div class="col-lg-6">
      <div class="login-form">
        <h2>{{message}}</h2>
        <form action="/users/reset-password" method="POST">
          <div class="row">
            <div class="col-md-12">
              {{!-- <label>E-mail / Username</label> --}}
              <input hidden class="form-control" name="userId" type="text" value="{{id}}">
            </div>
            <div class="col-md-12">
              {{!-- <label>E-mail / Username</label> --}}
              <input class="form-control" name="password" type="text" placeholder="Enter new password">
            </div>
            <div class="col-md-12">
              {{!-- <label>E-mail / Username</label> --}}
              <input class="form-control" name="confirmPassword" type="text" placeholder="Confirm new password">
            </div>
            <div class="col-md-12 d-flex justify-content-center">
              <button class="btn" type="submit">Submit</button>
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>